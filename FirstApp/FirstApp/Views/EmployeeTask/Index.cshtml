@model IEnumerable<EmployeeTask>
@{
    ViewData["Title"] = "Index";    
}

<a asp-action="Create">Create an Employee Task</a>

<h2>Here is the list of Employee Tasks</h2>
<table style="width:50%">
    <thead>
        <tr>
            <th>TaskName</th>
            <th>StartDate</th>
            <th>EndDate</th>            
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (EmployeeTask e in Model)
        {
        <tr>
            <td>@e.TaskName</td>
            <td>@e.StartDate.ToShortDateString()</td>
            <td>@e.EndDate.ToShortDateString()</td>            
            <td><a asp-action="Update" asp-route-taskname="@e.TaskName">Update</a></td>
            <td>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="taskname" value="@e.TaskName" />                    
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>

